<script>
    function addAnswer(idQuestion) {
        var ret = "";
        var total = "";
        $("#textQuestion").children().each(function () {
            if ($(this).is(':checked')) {
                ret = ret + "sss" + $(this).attr("name");
            }
            total = total + "sss" + $(this).attr("name");
        });

        var urlPage = "/sendSelectedItems/" + idQuestion + "/" + ret + "/" + total;
        $.ajax({
            url: urlPage
        }).done(function (data) {
            reFresh();
        })
    }

    function reFresh() {
        location.reload(true)
    }

    function sendAnswer(correct, idQuestion) {
        console.log(idQuestion);
        console.log(correct);
        $.ajax({
            url: "/sendAnswerTrue/" + idQuestion + "/" + correct
        })
    }

</script>