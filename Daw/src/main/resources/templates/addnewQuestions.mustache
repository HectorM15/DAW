    <div class="modal" id="addQuestion" tabindex="-1" role="dialog" aria-labelledby="addQuestion">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addQuestionHead">{{#question}}{{info}}{{/question}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/saveAnswer/{{#question}}{{idQuestion}}{{/question}}" method="get">
